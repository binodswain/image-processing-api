{
    "name": "image-processor",
    "version": "0.0.1",
    "description": "image processing API to process/resize images.",
    "scripts": {
        "build": "npx tsc",
        "serve": "node dist/.",
        "preserve": "npm run cleanup && npm run build && npm run build:fe",
        "prepare": "npm run cleanup && npm run build && npm run build:fe",
        "jasmine": "jasmine",
        "test": "npm run build && npm run jasmine",
        "start": "nodemon src/index.ts",
        "lint": "eslint . --ext .ts",
        "format": "prettier --config .prettierrc \"src\" --write",
        "cleanup": "npx rimraf dist && npx rimraf assets/images/thumb/*.*",
        "start:fe": "parcel",
        "build:fe": "parcel build"
    },
    "keywords": [
        "nanodegree",
        "image-processor",
        "api"
    ],
    "author": "Binod Swain <me@binodswain.dev> (https://binodswain.dev/)",
    "license": "MIT",
    "devDependencies": {
        "@parcel/transformer-sass": "^2.6.2",
        "@types/express": "^4.17.13",
        "@types/jasmine": "^4.0.3",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.0.3",
        "@types/sharp": "^0.30.4",
        "@types/supertest": "^2.0.12",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jasmine": "^4.2.1",
        "jasmine-spec-reporter": "^7.0.0",
        "nodemon": "^2.0.19",
        "parcel": "^2.6.2",
        "prettier": "^2.7.1",
        "supertest": "^6.2.4",
        "ts-node": "^10.8.2",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "express": "^4.18.1",
        "multer": "^1.4.5-lts.1",
        "sharp": "^0.30.7",
        "winston": "^3.8.1"
    },
    "targets": {
        "default": {
            "source": [
                "src/views/home.html",
                "src/views/upload.html",
                "src/views/thumbnails.html",
                "src/views/fullimages.html"
            ],
            "distDir": "dist/views"
        }
    }
}
